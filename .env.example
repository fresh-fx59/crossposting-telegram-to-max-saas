# Database
# IMPORTANT: Use the same password in both POSTGRES_PASSWORD and DATABASE_URL
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
POSTGRES_PASSWORD=your-secure-password-change-in-production
DATABASE_URL=postgresql+asyncpg://crossposter:your-secure-password-change-in-production@postgres:5432/crossposter

# JWT Authentication
# Generate with: python3 -c "import secrets; print(secrets.token_hex(64))"
JWT_SECRET_KEY=your-jwt-secret-key-min-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=crossposter@yourdomain.com
SMTP_FROM_NAME=Telegram Crossposter

# Email Verification & Password Reset
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=2

# Cloudflare Turnstile (Captcha)
# Get keys at https://dash.cloudflare.com/ -> Turnstile
# Leave both empty to disable captcha entirely during development
# NOTE: SITE_KEY is built into frontend at build time (see frontend/Dockerfile)
CLOUDFLARE_TURNSTILE_SECRET=your-turnstile-secret-key
CLOUDFLARE_TURNSTILE_SITE_KEY=your-turnstile-site-key

# Token Encryption (for storing bot tokens securely)
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# User Limits
MAX_CONNECTIONS_PER_USER=3
MAX_POSTS_PER_DAY_PER_CONNECTION=100
POST_HISTORY_RETENTION_DAYS_SUCCESS=30
POST_HISTORY_RETENTION_DAYS_FAILED=7

# Frontend URL (for email links)
FRONTEND_URL=https://crossposter.aiengineerhelper.com

# Webhook URL (for Telegram webhooks)
WEBHOOK_BASE_URL=https://crossposter.aiengineerhelper.com

# Environment
ENV=production
